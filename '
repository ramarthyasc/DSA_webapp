import { forwardRef, useEffect, useRef } from "react";

export const ResultSlider = forwardRef((props) => {
  const isMouseDownRef = useRef()


  function handleMouseDown() {
    window.getSelection().removeAllRanges();
    isMouseDownRef.current = true;
  }

  function handleMouseUp() {
    window.getSelection().removeAllRanges();
  }

  useEffect(() => {
    function handleMouseUp() {

    }
    props.resultBoxRef.addEventListener("mouseup", handleMouseUpWindow)
  })


  return (
    <div ref={props.resultBoxRef} id="resultslider" onMouseEnter={handleMouseEnter} onMouseDown={handleMouseDown}
      onMouseUp={handleMouseUp} className={`h-3 bg-orange-300 
      border border-solid border-black ${isMouseDownRef.current ? "bg-amber-500" : "bg-orange-300"}`} >
    </div >
  )
})
