<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Sign-up</title>
  <link rel="stylesheet" href="/style.css">
</head>


<body class="full">
  <form action="<%= locals.baseUrl %>/" method="post">
    <div>
      <label for="emailId">Email id :</label>
      <input type="text" id="emailId" name="emailId">
    </div>
    <div>
      <label for="password">Password :</label>
      <input id="password" class="pass" type="password" name="password">
    </div>
    <div>
      <label for="confirmPassword">Confirm Password :</label>
      <input id="confirmPassword" class="pass" type="password" name="confirmPassword">
    </div>
    <div>
      <input type="checkbox" onclick="show()" name="showPassword">
      <label for="showPassword">Show password</label>
      <button style="margin-left: 60px;" type="submit">Submit</button>
    </div>

  </form>
  <p>
    Hello !! <%= message %>
  </p>
  <p> <%- include("./partials/error.ejs") %> </p>
  <script>
    const show = function () {
      const elemArray = document.getElementsByClassName("pass");
      for (let elem of elemArray) {
        elem.type = elem.type === "password" ? "text" : "password"
      }
    }
  </script>

</body>

</html>
